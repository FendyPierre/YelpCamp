<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Add new Comment <%= campground.name%> </h1>


        <div style="width: 30%; margin: 40px auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                        <input required type="text" class="form-control" placeholder="add comment" name="comment[text]">
                </div>
                <div class="form-group">
                        <input required  type="text" class="form-control" placeholder="auther" name="comment[auther]">
                </div>
                <button class="btn btn-lg btn-block btn-primary">Submit</button>
            </form> 

            <a href="/campgrounds/<%= campground._id %>">Go Back!</a>
        </div>

        </div>
    </div>
